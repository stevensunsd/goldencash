<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:id="@+id/">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/signup_textFields">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/open_account_text"

        android:id="@+id/textViewHeader"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Username_text"
        android:id="@+id/signup_username"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_text"
        android:id="@+id/signup_password"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_text"
        android:id="@+id/signup_password2"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/firstname_text"
        android:id="@+id/signup_firstname"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lastname_text"
        android:id="@+id/signup_lastname"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/account_type"
        android:id="@+id/account_type"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signup_textFields"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Debit_account"
        android:id="@+id/check_debit"
        android:layout_below="@+id/account_type"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Checking"
        android:id="@+id/check_checking"
        android:layout_below="@+id/check_debit"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Saving"
        android:id="@+id/check_saving"
        android:layout_below="@+id/check_checking"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Credit_Account"
        android:id="@+id/check_credit"
        android:layout_below="@+id/check_saving"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm"
        android:id="@+id/button_confirm"
        android:layout_marginLeft="110dp"
        android:layout_below="@id/check_credit" />

    </LinearLayout>
</ScrollView>
